
{
        "$schema": "http://json-schema.org/draft-04/schema#",
	"type" : "object",
	"properties": {

	                "numSpecies": {
				"type": "integer",
				"minimum": 1,
				"exclusiveMinimum": false},

	                "runName":{"type": "string"},

	                "simType":{
				"type": "string",
				"enum":["NVT_MC", "NPT_MC", "GEMC", "GCMC"]
			},

			"dispersion":{
				"type": "object", 
				"properties":{
					"potential": {
						"type": "string",
						"enum":["lj","mie","none"]
					},
					"cutType": {
						"type": "string",
						"enum":["cut","cut_tail","cut_shift"]
					},
					"cutOff": {
						"type": "number", 
						"minimum":0.0,
		   				"exclusiveMinimum": true
					}
				},
			"required": ["potential"],
			"additionalProperties" : false
			},	

			"electrostatics":{
				"type": "object", 
				"properties":{
					"method": {
						"type": "string",
						"enum":["ewald", "dsf","none"]
					},
					"cutOff": {
						"type": "number",
						"minimum":0.0, 
						"exclusiveMinimum": true},
					"parm1": {
						"type": "number",
						"minimum":0.0, 
						"exclusiveMinimum": true}
				},
			"required": ["method"],
			"additionalProperties" : false
			},

			"mixingRule":{
				"type":"string",
				"enum":["lb", "geometric", "kong","custom"]
			},

			"seeds":{
				"type":"array", 
				"items": [
					{"type": "integer"},
					{"type": "integer"}
				],
				"additionalItems": false
			},

			"cutOffLow":{
				"type":"number",
				"minimum": 0.0,
				"exclusiveMinimum": false
			},

			"mcfFiles":{
				"type":"array", 
				"items": [
					{"type": "string"}
				],
				"minItems" : 1,
				"additionalItems": {"type": "string"}
			},

			"molNumber":{
				"type":"array", 
				"items": [
					{"type": "integer", "minimum": 1}
				],
				"additionalItems": {
					"type":"integer"
				}
			},

			"box":{
				"type":"array",
				"items":[{

					"type":"array",
					"items": [{					
							"type":"array",
							"items": [
								{"type":"number"},
								{"type":"number"},
								{"type":"number"}
							],
							"minItems":3,
							"maxItems":3
						}],
					"maxItems":3,
					"minItems":3
				}],
				"minItems":1,
				"additionalItems": {
						"type":"array",
						"items": [{					
								"type":"array",
								"items": [
									{"type":"number"},
									{"type":"number"},
									{"type":"number"}
								],
								"minItems":3,
								"maxItems":3
							}],
						"maxItems":3,
						"minItems":3
				}
			},

			"temperature":{
				"type":"number",
				"minimum": 1
			},

			"probabilities":{
				"type":"object",
				"properties":{
					"translation":{"type":"number","minimum":0.0},
					"rotation":{"type":"number","minimum":0.0},
					"regrowth":{"type":"number","minimum":0.0},
					"volume":{"type":"number","minimum":0.0},
					"swap":{"type":"number","minimum":0.0},
					"insertion":{"type":"number","minimum":0.0},
					"deletion":{"type":"number","minimum":0.0}
				},
				"additionalProperties": false
			},

			"maxDisp":{
				"type":"array",
				"items": [{

					"type":"object",
					"properties":{
						"translation":{
							"type":"array",
							"items":[{
								"type":"number",
								"minimum":0.0
							}],
							"minItems":1
						},
						"rotation":{
							"type":"array",
							"items":[{
								"type":"number",
								"minimum":0.0
							}],
							"minItems":1
						},
						"volume":{
							"type":"array",
							"items":[{
								"type":"number",
								"minimum":0.0
							}],
							"minItems":1
						}
					}
				}],
				"minItems":1,
				"additionalItems":{
						"type":"object",
						"properties":{
							"translation":{
								"type":"array",
								"items":[{
									"type":"number",
									"minimum":0.0
								}],
								"minItems":1
							},
							"rotation":{
								"type":"array",
								"items":[{
									"type":"number",
									"minimum":0.0
								}],
								"minItems":1
							},
							"volume":{
								"type":"array",
								"items":[{
									"type":"number",
									"minimum":0.0
								}],
								"minItems":1
							}
						}
				}

			},


			"properties":{

				"type":"array",
				"items":[{
				
					"type":"array",
					"items":[
						{"type":"string","enum":["energy","pressure","volume"]}
					],
					"minItems":1
				}],
				"additionalItems":{
					"type":"array",
					"items":[
						{"type":"string","enum":["energy","pressure","volume"]}
					]
				}
			},

			"simInfo":{
				"type":"object",
				"properties":{
					"simType":{
						"type":"string",
						"enum":["equilibration","production"]
					},
					"updateThermal":{
						"type":"integer",
						"minimum":0,
						"exclusiveMinimum": false
					},
					"updateVolume":{
						"type":"integer",
						"minimum":0,
						"exclusiveMinimum": false
					},
					"length":{
						"type":"integer",
						"minimum":0,
						"exclusiveMinimum": false
					},
					"units":{
						"type":"string",
						"enum":["steps","time"]
					},
					"printProp":{
						"type":"integer",
						"minimum":0,
						"exclusiveMinimum": false
					},
					"printXYZ":{
						"type":"integer",
						"minimum":0,
						"exclusiveMinimum": false
					},
					"startMethod":{
						"type":"string",
						"enum":["read_config","make_config",
                                                        "checkpoint", "add_to_config"]
					},
					"restartFile":{
						"type":"string"
					}
				},
				"additionalProperties": false,
				"required":["simType","updateThermal","updateVolume", 
                                            "length", "units", "printProp", "printXYZ",
              				    "startMethod"]
     
			},

			"fragmentFiles":{
				"type":"array", 
				"items": [
					{"type": "string"}
				],
				"minItems" : 1,
				"additionalItems": {"type": "string"}
			},

			"cbmcInfo":{
				"type": "object", 
				"properties":{
					"kappaDihedral": {
						"type": "integer",
						"minimum":0,
						"exclusiveMinimum" : false
					},
					"kappaRotation": {
						"type": "integer",
						"minimum":0,
						"exclusiveMinimum" : false
					},
					"kappaInsertion": {
						"type": "integer",
						"minimum":0,
						"exclusiveMinimum" : false
					},
					"cbmcCutOff": {
						"type": "number",
						"minimum":0.0,
						"exclusiveMinimum" : false
					}
				},
			"additionalProperties" : false
			}




	},
	
	"required": ["numSpecies", "runName", "simType", "dispersion",
                     "electrostatics", "mixingRule", "seeds", "cutOffLow", 
                     "mcfFiles", "molNumber","box", "temperature",
                     "probabilities", "simInfo", "properties", 
                     "fragmentFiles", "cbmcInfo"
		]
}
